{
    "name": "my/rest-api-practice",
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "vlucas/phpdotenv": "^5.6"
    },
    "scripts": {
        "migrate": "php bin/migrate.php",
        "smoke": "php bin/smoke.php",
        "test": "vendor/bin/phpunit --configuration phpunit.xml"
    },
    "require-dev": {
        "phpunit/phpunit": "^13.0"
    }
}
